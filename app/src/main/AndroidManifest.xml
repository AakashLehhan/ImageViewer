<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aakash.assignmenttwo6thsemester">
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_image_24"
        android:label="Image Viewer"
        android:roundIcon="@drawable/ic_baseline_image_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.AssignmentTwo6thSemester">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"/>
    </application>
</manifest>